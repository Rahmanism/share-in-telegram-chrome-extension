{
    "name": "Share in Telegram",
    "description": "Share current tab in Telegram desktop.",
    "manifest_version": 2,
    "version": "1.0",
    "browser_action": {
        "default_icon": {
            "128": "128.png"
        },
        "default_popup": "index.html",
        "default_title": "Share in Telegram"
    },
    "icons": {
        "128": "128.png"
    },
    "permissions": [
        "tabs"
    ]
}