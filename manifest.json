{
    "name": "Share in Telegram",
    "description": "Share current tab in Telegram desktop.",
    "manifest_version": 2,
    "version": "1.6",
    "browser_action": {
        "default_icon": {
            "96": "icon.png"
        },
        "default_title": "Share in Telegram"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["js.js"]
    },
    "icons": {
        "96": "icon.png",
		"48": "icon48.png",
        "128": "icon128.png",
        "16": "icon16.png"
    },
    "permissions": [
        "activeTab"
    ]
}